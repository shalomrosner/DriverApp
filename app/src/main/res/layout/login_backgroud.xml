<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
<android.support.constraint.ConstraintLayout android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:id="@+id/loginbackgroud">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        android:background="@drawable/top"
        android:orientation="horizontal"
        app:layout_constraintBottom_toTopOf="@+id/other"
        app:layout_constraintTop_toTopOf="parentparent">


    </LinearLayout>

    <LinearLayout
        android:id="@+id/other"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/logiInpic"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent">


    </LinearLayout>
</android.support.constraint.ConstraintLayout>



</android.support.constraint.ConstraintLayout>